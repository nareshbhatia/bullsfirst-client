{
  "name": "bullsfirst-client",
  "description": "Application to trade securities and manage investments",
  "version": "0.1.0",
  "private": true,
  "author": "Naresh Bhatia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nareshbhatia/bullsfirst-client"
  },
  "scripts": {
    "build": "react-scripts build",
    "build-storybook": "build-storybook -s public",
    "cypress:open": "cypress open",
    "eject": "react-scripts eject",
    "format": "prettier --write README.md 'src/**/{*.md,*.json,*.css,*.ts*}' 'cypress/integration/**/*'",
    "lint": "eslint src",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "start": "react-scripts start",
    "storybook": "start-storybook -p 6006 -s public",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:update": "react-scripts test --watchAll=false --updateSnapshot"
  },
  "dependencies": {
    "@apollo/client": "^3.4.7",
    "@hookform/resolvers": "^2.7.1",
    "@react-force/number-utils": "^2.1.0",
    "ag-grid-community": "^25.3.0",
    "ag-grid-react": "^25.3.0",
    "apollo-link-scalars": "^2.1.4",
    "graphql": "^15.5.1",
    "graphql-scalars": "^1.10.0",
    "highcharts": "^9.1.2",
    "highcharts-react-official": "^3.0.0",
    "history": "5.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.12.2",
    "react-icons": "^4.2.0",
    "react-number-format": "^4.7.3",
    "react-router-dom": "^6.0.0-beta.1",
    "react-select": "^4.3.1",
    "reactjs-popup": "^2.0.5",
    "uuid": "^8.3.2",
    "web-vitals": "^1.1.2",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.0.1",
    "@graphql-codegen/introspection": "^2.0.0",
    "@graphql-codegen/typed-document-node": "^2.0.0",
    "@graphql-codegen/typescript": "2.0.0",
    "@graphql-codegen/typescript-operations": "2.0.1",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/node-logger": "^6.3.7",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.7",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-select": "^4.0.17",
    "@types/uuid": "^8.3.1",
    "@types/yup": "^0.29.13",
    "cypress": "^8.2.0",
    "husky": "^4.3.8",
    "msw": "^0.34.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "react-scripts": "^4.0.3",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
    },
    "overrides": [
      {
        "files": ["**/*.ts?(x)"],
        "rules": {
          "@typescript-eslint/no-unused-vars": "error"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run test:coverage"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/__generated__/**",
      "!src/mocks/**",
      "!src/stories/**",
      "!src/test/**",
      "!src/index.tsx",
      "!src/reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
